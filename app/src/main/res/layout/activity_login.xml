<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/dark_gray">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="400dp"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="40dp"
        android:layout_marginTop="50dp"
        android:text="@string/name"
        android:textSize="40sp"
        android:background="@color/gold"
        android:textAlignment="center"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintLeft_toLeftOf="@id/ivLogo"
        app:layout_constraintRight_toRightOf="@id/ivLogo" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textColor="@color/white_grey"
        android:text="@string/email"
        android:textAlignment="center"
        android:textSize="12sp"
        android:layout_marginTop="40dp"
        android:inputType="none"
        app:layout_constraintLeft_toLeftOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/password"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/white_grey"
        android:layout_marginTop="20dp"
        android:inputType="none"
        app:layout_constraintLeft_toLeftOf="@id/tvEmail"
        app:layout_constraintTop_toBottomOf="@id/tvEmail" />

    <TextView
        android:id="@+id/tvConfPassword"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textColor="@color/white_grey"
        android:text="@string/conf_password"
        android:textAlignment="center"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:inputType="none"
        app:layout_constraintLeft_toLeftOf="@id/tvPassword"
        app:layout_constraintTop_toBottomOf="@id/tvPassword"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:background="@color/gold"
        app:layout_constraintLeft_toRightOf="@id/tvEmail"
        app:layout_constraintBottom_toBottomOf="@id/tvEmail"
        app:layout_constraintTop_toTopOf="@id/tvEmail"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:inputType="textPassword"
        android:background="@color/gold"
        android:textColor="@color/dark_gray"
        app:layout_constraintLeft_toRightOf="@id/tvPassword"
        app:layout_constraintBottom_toBottomOf="@id/tvPassword"
        app:layout_constraintTop_toTopOf="@id/tvPassword"/>

    <EditText
        android:id="@+id/etConfPassword"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:inputType="textPassword"
        android:background="@color/gold"
        android:textColor="@color/dark_gray"
        app:layout_constraintLeft_toRightOf="@id/tvConfPassword"
        app:layout_constraintBottom_toBottomOf="@id/tvConfPassword"
        app:layout_constraintTop_toTopOf="@id/tvConfPassword"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textSize="30sp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/dark_gray"
        app:backgroundTint="@color/green"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>