<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:text="@string/logout"
        android:textSize="12sp"
        app:backgroundTint="@color/gold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnProfile"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:text="@string/profile"
        android:textSize="12sp"
        app:backgroundTint="@color/gold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCard1"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_margin="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCard2"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="@id/btnCard1"
        app:layout_constraintRight_toRightOf="@id/btnCard1"
        app:layout_constraintTop_toBottomOf="@id/btnCard1" />

    <Button
        android:id="@+id/btnCard3"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="@id/btnCard2"
        app:layout_constraintRight_toRightOf="@id/btnCard2"
        app:layout_constraintTop_toBottomOf="@id/btnCard2" />

    <Button
        android:id="@+id/btnCard4"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="@id/btnCard3"
        app:layout_constraintRight_toRightOf="@id/btnCard3"
        app:layout_constraintTop_toBottomOf="@id/btnCard3" />


</androidx.constraintlayout.widget.ConstraintLayout>